{
  "name": "claude-tasks-workflow",
  "version": "1.0.0",
  "description": "Intelligent, context-aware workflow system for managing software development tasks using Claude Sonnet 4.5 sub-agents - optimized for markdown, streamlined complexity, and token efficiency",
  "main": "index.js",
  "scripts": {
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore '.claude/tasks/**'",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore '.claude/tasks/**' --fix",
    "lint": "npm run lint:md",
    "lint:fix": "npm run lint:md:fix",
    "format": "prettier --check 'src/claude/**/*.md' --ignore-path .gitignore",
    "format:fix": "prettier --write 'src/claude/**/*.md' --ignore-path .gitignore",
    "validate": "node scripts/validate.js",
    "validate:claude4": "node scripts/validate-claude4-compliance.js",
    "validate:enhanced": "npm run validate && npm run validate:claude4",
    "build": "npm run lint && npm run format && node scripts/build.js",
    "build:claude4": "npm run lint && npm run format && npm run validate:claude4 && node scripts/build.js",
    "dist": "node scripts/dist.js",
    "test": "npm run validate:enhanced",
    "prepare:dist": "npm run build:claude4 && npm run validate:enhanced && npm run dist",
    "deploy": "node scripts/deploy.js"
  },
  "keywords": [
    "claude",
    "ai",
    "workflow",
    "sub-agents",
    "development",
    "task-management",
    "automation",
    "documentation",
    "project-management"
  ],
  "author": "Development Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-tasks-workflow.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/claude-tasks-workflow/issues"
  },
  "homepage": "https://github.com/your-org/claude-tasks-workflow#readme"
}
